# VoiceClone Pro - Environment Configuration
# Copy this file to .env and configure your settings

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///voiceclone.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/voiceclone_db

# Redis Configuration (for caching and job queue)
REDIS_URL=redis://localhost:6379/0

# File Upload Settings
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
TEMP_FOLDER=temp

# Audio Processing Settings
DEFAULT_SAMPLE_RATE=44100
MAX_AUDIO_DURATION=300  # 5 minutes
MIN_AUDIO_DURATION=5    # 5 seconds

# External API Keys (Optional)
# Azure Speech Services
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# AWS Polly
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Google Cloud Text-to-Speech
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/voiceclone.log

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Monitoring and Analytics
ENABLE_ANALYTICS=False
SENTRY_DSN=your-sentry-dsn

# Performance Settings
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT=3600  # 1 hour
CLEANUP_INTERVAL=3600  # 1 hour

# Development Settings
TESTING=False
WTF_CSRF_ENABLED=True

# Production Settings (uncomment for production)
# FLASK_ENV=production
# DEBUG=False
# DATABASE_URL=postgresql://username:password@localhost:5432/voiceclone_prod
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Docker Settings
DOCKER_ENV=False
CONTAINER_NAME=voiceclone-app

# Backup Settings
BACKUP_FOLDER=backups
AUTO_BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
